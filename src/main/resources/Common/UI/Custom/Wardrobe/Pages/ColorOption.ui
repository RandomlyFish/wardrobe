$Sounds = "../../Sounds.ui";

@ColorsPerRow = 13;

Group {
  Padding: (Horizontal: 3);

  Button #Button {
    @Sounds = (
      Activate: (
        SoundPath: $Sounds.@TilesActivate,
        MinPitch: -0.04,
        MaxPitch: 0.04,
        Volume: 6
      )
    );
    Anchor: (Width: 30, Height: 30, Bottom: 8);

    Group #SelectedHighlight {
      Anchor: (Width: 36, Height: 36, Top: -3, Left: -3);
      Background: "../Icons/ColorOptionSelected.png";
      Visible: false;
    }

    Group #Colors {
      LayoutMode: Left;
      Anchor: (Width: 30, Height: 30);
      MaskTexturePath: "../Icons/ColorOptionMask.png";
    }

    AssetImage #Icon {
      Anchor: (Width: 44, Height: 44);
    }

    Group {
      Anchor: (Width: 30, Height: 30);
      Background: "../Icons/ColorOptionFrame.png";
    }
  }
}
